{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "strict": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "baseUrl" : "src",
        "resolveJsonModule": true,
        "typeRoots" : [
            "./node_modules/@types",
            "./global.d.ts"
        ],
        "paths": {
            "~db/*" : [ "db/*" ],
            "~constants/*" : [ "constants/*" ],
            "~modules/*" : [ "modules/*" ], 
            "~configs/*" : [ "configs/*" ],
            "~middlewares/*" : [ "middlewares/*" ]
        },
    }
}